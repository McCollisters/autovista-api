{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["node", "express", "jest"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "rootDir": ".."
  },
  "include": ["**/*.ts", "../src/**/*.ts"],
  "exclude": ["node_modules", "**/*.js"]
}
